                    li.dates_list-item
                        a(href="#") неделя   
                    li.dates_list-item
                        a(href="#") выходные 
                    li.dates_list-item
                        a(href="#") две недели
                    li.dates_list-item
                        a(href="#") месяц
                    li.dates_list-item
                        a(href="#") почасавой 
                    li.dates_list-item
